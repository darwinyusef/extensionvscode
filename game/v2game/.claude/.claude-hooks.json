{
  "hooks": {
    "on_approval": [
      {
        "name": "Auto Git Stash on Changes",
        "matcher": {
          "type": "ToolPattern",
          "pattern": "Bash|Edit|Write"
        },
        "hooks": [
          {
            "type": "command",
            "command": "git add . && git stash push -m 'Claude Staged: {{date}}'"
          }
        ]
      }
    ]
  }
}